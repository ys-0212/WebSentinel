{
  "manifest_version": 3,
  "name": "Web Sentinel",
  "version": "0.1",
  "description": "AI-powered phishing detection extension that analyzes URLs and page content for security threats",
  "icons": {
    "16": "detective.png",
    "48": "detective.png",
    "128": "detective.png"
  },
  "action": {
    "default_title": "Web Sentinel",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "jquery-3.1.1.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.1.1.min.js", "content.js"]
    }
  ]
}
